%div.container
  %div.row
    %div.col-lg-12
      %h1.page-header= @event.name
  %div.row
    %div.col-lg-7
      = image_tag("/tmp/#{@event.img_url}", class: "img-responsive")
    %div.col-md-5
      %h4= @event.date.strftime("%d %B %Y") + ', ' + @event.time.strftime("%H:%M")
      %h4= @event.category.name.capitalize.singularize
      %p= @event.description
      = link_to '#', class: "btn btn-success"  do
        Book now&nbsp;
        %span.glyphicon.glyphicon-plus